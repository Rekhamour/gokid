<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gokids.yoda_tech.gokids.ecommerce.ChackoutActivity">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ecommerce_addeditems_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
    <Button
        android:layout_width="250dp"
        android:text="Checkout"
        android:id="@+id/checkoutBtn"
        android:layout_marginTop="@dimen/dp20margin"
        android:layout_gravity="center"
        android:background="@drawable/red_cornered_bg"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp10margin"
        android:layout_height="wrap_content" />

</RelativeLayout>