<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/paledark_white"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gokids.yoda_tech.gokids.ecommerce.EcommerceMainActivity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/viewpager_RL_class"
        android:background="@color/white"
        android:layout_height="wrap_content" >


        <android.support.v4.view.ViewPager
            android:id="@+id/ecommerce__pager_class"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true" />
        <me.relex.circleindicator.CircleIndicator
            android:layout_below="@+id/ecommerce__pager_class"
            android:id="@+id/image_indicator_class"
            android:layout_width="fill_parent"
            app:ci_drawable="@drawable/bg_circle_fill"

            app:ci_drawable_unselected="@drawable/bg_grey"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dip"
            />




    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_centerVertical="true"
        android:layout_below="@+id/viewpager_RL_class"
        android:layout_marginTop="@dimen/dp20margin"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_horizontal"
        android:foregroundGravity="center"
       android:id="@+id/ecommerce_list_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>
