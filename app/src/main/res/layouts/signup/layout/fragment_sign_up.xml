<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gokids.yoda_tech.gokids.signup.activity.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/profile_img"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/btn_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="@dimen/dp10margin"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile"
            android:layout_height="20dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:hint="@string/username_text"
        android:inputType="text"
        android:singleLine="true"
        android:layout_height="40dp"
        android:gravity="left|center"
        android:id="@+id/signup_username"
        android:textColor="@color/black"

        /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_password"
            android:layout_height="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:hint="@string/pass_text"
        android:singleLine="true"
        android:gravity="left|center"
        android:layout_height="40dp"
        android:id="@+id/signup_password"
        android:inputType="textPassword"
        android:textColor="@color/black"

        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="@dimen/dp10margin"
            android:layout_gravity="center"
            android:src="@drawable/email"
            android:layout_height="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:gravity="left|center"
        android:inputType="text"
        android:singleLine="true"
        android:hint="@string/emailad_text"
        android:layout_height="40dp"
        android:id="@+id/signup_email"
        android:textColor="@color/black"

        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="@dimen/dp10margin"
            android:layout_gravity="center"
            android:src="@drawable/email"
            android:layout_height="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:hint="@string/phone_no_text"
        android:singleLine="true"
        android:inputType="text"
        android:gravity="left|center"
        android:layout_height="40dp"
        android:id="@+id/signup_phoneno"
        android:textColor="@color/black"

        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="@dimen/dp10margin"
            android:layout_gravity="center"
            android:src="@drawable/ic_location"
            android:layout_height="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:hint="@string/city_text"
        android:inputType="text"
        android:singleLine="true"
        android:layout_height="40dp"
        android:gravity="left|center"
        android:id="@+id/signup_city"
        android:textColor="@color/black"


        />
        </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/btn_signup"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:layout_marginTop="@dimen/dp10margin"
        android:text="@string/sign_up"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/signin_button"
        />


</LinearLayout>
