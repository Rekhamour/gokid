<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Select Gender"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp20margin"
            android:layout_marginBottom="@dimen/dp20margin"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="50dp"
                android:text="Girl"
                android:onClick="selectGirl"
                android:textColor="@color/white"
                android:background="@drawable/black_outline_reactangle_filled_grey"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/dp20margin"
                />
            <Button
                android:layout_width="50dp"
                android:layout_marginLeft="@dimen/dp20margin"
                android:text="Boy"
                android:onClick="selectBoy"
                android:textColor="@color/white"
                android:background="@drawable/black_outline_reactangle_filled_grey"
                android:layout_height="50dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:text="Age Chart"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp20margin"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
        <com.gokids.yoda_tech.gokids.utils.MyGridView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/clothing_age_gridview"
            android:numColumns="3"
            android:scrollbars="vertical"
            android:layout_marginBottom="@dimen/dp30margin"/>


    <Button
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp20margin"
                android:layout_gravity="center"
                 android:text="All"
                 android:textColor="@color/white"
                 android:onClick="selectAll"
                android:layout_width="200dp"
                />

            >



    </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20margin"
        android:layout_gravity="center"
        android:id="@+id/continue_clothing"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_default"
        android:layout_centerHorizontal="true"
        android:text="Continue"
        android:layout_marginBottom="@dimen/dp10margin"
        android:textColor="@color/white"
        android:layout_width="300dp"
        />
</RelativeLayout>