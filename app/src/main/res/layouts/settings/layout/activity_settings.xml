<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gokids.yoda_tech.gokids.settings.activity.SettingsActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/app_layout"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
            <Button
                android:layout_width="200dp"
                android:background="@drawable/reactangle_whiteoutline"
                android:gravity="center"
                android:padding="5dp"
                android:id="@+id/update_profile"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Change Profile"
                android:textAllCaps="false"
                android:layout_margin="7dp"
                android:layout_height="40dp"
                />

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:layout_marginTop="50dp"
        android:id="@+id/settings_header"

        android:layout_marginBottom="@dimen/dp10margin"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:gravity="center"
    android:layout_height="wrap_content">
        <com.gokids.yoda_tech.gokids.home.util.RoundedImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/pro1"
            android:id="@+id/settings_user_image"
            />
    <TextView
        android:layout_width="wrap_content"
        android:text="Change Profile"
        android:layout_gravity="center"
        android:id="@+id/change_profile_pic"
        android:layout_height="wrap_content" />
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp20margin"
            android:layout_marginRight="@dimen/dp20margin"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_profile"
                    android:layout_height="15dp" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"

                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:textSize="15sp"
                    android:id="@+id/settins_username"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location"
                    android:layout_height="15dp" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/settins_city"
                    android:hint="Location"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />


            </LinearLayout>






        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp20margin"
        android:layout_marginLeft="@dimen/dp20margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_gravity="center"
                android:src="@drawable/email"
                android:layout_height="15dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:layout_marginLeft="10dp"

                android:layout_height="wrap_content"
                android:id="@+id/settings_mail"
                android:hint="@string/email_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_gravity="center"

                android:src="@drawable/email"
                android:layout_height="15dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/settins_phone"
                android:hint="@string/phone_no_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_password"
                android:layout_height="15dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"

                android:layout_height="wrap_content"
                android:id="@+id/settings_currentpass"
                android:hint="@string/currentpass_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:inputType="textPassword"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_password"
                android:layout_height="15dp" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/settings_newpass"
                android:hint="@string/newpass_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:inputType="textPassword"
                />


        </LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp20margin"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red_500"
            android:textSize="18sp"
            android:text="Edit Kids Details" />
    <ImageView
        android:layout_width="30dp"
        android:id="@+id/setttings_add_kid"
        android:layout_gravity="center"
        android:src="@drawable/ic_plus"
        android:layout_height="30dp" />
    </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_child_details"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
