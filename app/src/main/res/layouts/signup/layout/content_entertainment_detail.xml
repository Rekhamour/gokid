<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_shop_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <ScrollView
        android:id="@+id/entertainment_detail_scrollVie"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:id="@+id/viewpager_upper_RL"
                    android:layout_height="wrap_content" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/entertainment_image_pager"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentTop="true" />

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/entertainment_indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="25dp"
                        android:padding="10dip"
                        />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewpager_upper_RL"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/entertainment_detail_distance_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="12dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/entertainment_detail_bookmark"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_badge_3x" />

                        <TextView
                            android:layout_width="90dp"
                            android:textColor="@color/red_700"
                            android:gravity="center"
                            android:id="@+id/entertainment_detail"
                            android:textSize="25sp"
                            android:visibility="gone"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_with_redstroke"
                            android:layout_height="90dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="end|center_vertical"
                        android:layout_height="wrap_content">


                        <ImageButton
                            android:id="@+id/entertainment_detail_chat"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_chat_3x" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                        <ImageButton
                            android:id="@+id/entertainment_detail_direction"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_route_3x" />
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="180dp"

                    android:layout_centerHorizontal="true"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/circle_white_filled"
                        android:layout_height="30dp"/>
                </FrameLayout>
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/entertainment_detail_doctors_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:text="Timings"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/entertainment_detail_timings_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/endtime_entertainment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:text="Website"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/entertainment_detail_website_tv"
                android:layout_width="match_parent"
                android:autoLink="all"
                android:textColorLink="@color/blue"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:text="Known For"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/entertainment_detail_knownfor_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:text="Locate Us"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:text="Address"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/entertainment_detail_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:text="Email Address"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/entertainment_detail_email_tv"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"

                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:max="5"
                    android:id="@+id/addRating"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp10margin"
                    android:visibility="invisible"
                    android:background="@color/black"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>


                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_margin="2dp"
                    android:background="@drawable/thumbs_up" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_margin="2dp"
                    android:background="@drawable/thumbs_dow" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/count_up_entertain"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:id="@+id/thumbs_up_entertain"
                    android:src="@drawable/thumbs_up" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:id="@+id/thumbs_down_entertain"

                    android:src="@drawable/thumbs_dow" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/count_down_entertain"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="Reviews"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/shop_detail_write_review"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:text="Write Review" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/entertainment_detail_reviews_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
