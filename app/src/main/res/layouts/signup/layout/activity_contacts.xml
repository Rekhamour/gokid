<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp10margin"
    android:background="@color/pale_white"
    android:layout_height="match_parent"
    tools:context="com.gokids.yoda_tech.gokids.sos.ContactsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_weight="0.1"
        android:id="@+id/addtextmessage"
        android:layout_margin="@dimen/dp10margin"
        android:text="Add a few Contact details of people you would like to inform first in case of emergency"
        android:layout_height="90dp" />

    <ListView
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:layout_centerInParent="true"
        android:layout_below="@+id/addtextmessage"
        android:layout_width="match_parent"
        android:id="@+id/contact_list"
        android:layout_height="wrap_content"></ListView>
    <Button
        android:layout_width="wrap_content"
        android:text="Done"
        android:layout_weight="0.1"
        android:layout_alignParentBottom="true"
        android:minWidth="200dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:onClick="redirectSOS"
        android:textColor="@color/white"
        android:background="@drawable/red_cornered_bg"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
