<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp5margin"
    android:layout_marginTop="@dimen/dp5margin"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.gokids.yoda_tech.gokidsapp.settings.fragment.GenderFragment">
        <TextView
            android:layout_width="wrap_content"
            android:text="It is a.."
            android:id="@+id/about_kid"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp20margin"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp40margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_boy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/add_kid_boy"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/dp10margin"
                    android:src="@drawable/ic_boy" />

                <TextView
                    android:id="@+id/add_kid_boy_text"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_default"
                    android:gravity="center"
                    android:text="BOY"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_girl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/add_kid_girl"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    android:layout_margin="@dimen/dp10margin"
                    android:src="@drawable/ic_girl"

                    />

                <TextView
                    android:id="@+id/add_kid_girl_text"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_default"
                    android:gravity="center"
                    android:text="GIRL"
                    android:textColor="@color/white"
                    android:textSize="18sp"

                    />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp40margin"
            android:layout_marginLeft="@dimen/dp40margin"
            android:layout_marginRight="@dimen/dp40margin"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:layout_width="200dp"
                android:padding="3dp"
                android:gravity="center"
                android:id="@+id/spinner_age"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:entries="@array/agearray"></Spinner>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:visibility="gone"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Skip this"
            android:textSize="15sp"
            android:id="@+id/skip_gender"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="@color/blue"
            android:layout_height="wrap_content" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp20margin"
        android:layout_marginRight="@dimen/dp20margin"
        android:background="@drawable/continue_bg"
        android:text="Continue"
        android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>

