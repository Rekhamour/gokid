<LinearLayout android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/outline_with_more_radius"
    android:id="@+id/contact_row_view"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="20dp"
        android:layout_marginLeft="@dimen/dp10margin"
        android:layout_gravity="center"
        android:focusable="false"
        android:id="@+id/address_contact"
        android:src="@drawable/plus_icon"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:focusable="false"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_marginLeft="@dimen/dp20margin"
            android:layout_marginRight="@dimen/dp20margin"
            android:hint="Add details from address book"
            android:inputType="text"
            android:singleLine="true"
            android:layout_height="20dp"
            android:gravity="left|center"
            android:id="@+id/name"
            android:textColor="@color/black"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp20margin"
            android:layout_marginRight="@dimen/dp20margin"
            android:inputType="text"
            android:singleLine="true"
            android:layout_height="20dp"
            android:gravity="left|center"
            android:id="@+id/contact"
            android:textColor="@color/black"
            android:focusable="false"
            />
    </LinearLayout>
    </LinearLayout>