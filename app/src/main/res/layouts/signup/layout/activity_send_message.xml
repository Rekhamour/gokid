<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pale_white"
    android:layout_height="match_parent"
    tools:context="com.gokids.yoda_tech.gokids.sos.SendMessageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:text="Write your own message"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:gravity="left"
        android:layout_margin="@dimen/dp20margin"
        android:padding="4dp"
        android:id="@+id/message"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="250dp"/>
    <Button
        android:layout_width="wrap_content"
        android:text="Done"
        android:minWidth="200dp"
        android:onClick="redirectback"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textColor="@color/white"

        android:background="@drawable/red_cornered_bg"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
